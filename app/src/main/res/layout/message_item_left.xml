<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:backgroundTint="#ffc305"
    android:orientation="horizontal"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_profile"
        android:id="@+id/profile_left"
        />
    <TextView
        android:layout_toRightOf="@id/profile_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing mssg"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/show_text_mssg"
        />
    <ImageView
        android:id="@+id/item_left_image"
        android:layout_width="100dp"
        android:layout_toRightOf="@id/profile_left"
        android:layout_height="100dp"
        android:layout_margin="6dp"
        android:visibility="gone"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/seen_text"
    android:visibility="gone"
    android:layout_below="@id/show_text_mssg"
    android:layout_marginLeft="10dp"/>

    </RelativeLayout>



